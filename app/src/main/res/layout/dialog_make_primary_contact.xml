<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
  android:layout_width = "match_parent"
  android:layout_height = "wrap_content"
  android:background = "@android:color/white"
  android:orientation = "horizontal">

  <RelativeLayout
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginBottom = "18dp"
    android:layout_marginLeft = "18dp"
    android:layout_marginRight = "18dp"
    android:layout_marginTop = "18dp">

    <TextView
      android:id = "@+id/tvBody"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_alignParentEnd = "false"
      android:layout_alignParentLeft = "false"
      android:layout_alignParentRight = "false"
      android:layout_alignParentStart = "false"
      android:layout_alignParentTop = "false"
      android:text = "@string/s_dialog_make_primary_contact"
      android:textColor = "@color/text_dialog_secondary"
      android:textSize = "@dimen/text_dialog_secondary"
      />

    <TextView
      android:id = "@+id/tvClose"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_alignParentBottom = "false"
      android:layout_alignParentRight = "false"
      android:layout_alignRight = "@+id/tvBody"
      android:layout_below = "@+id/tvBody"
      android:layout_marginTop = "12dp"
      android:paddingBottom = "12dp"
      android:paddingLeft = "9dp"
      android:paddingRight = "9dp"
      android:paddingTop = "12dp"
      android:text = "@string/s_yes"
      android:textColor = "@color/text_dialog_button_positive"
      android:textSize = "@dimen/text_dialog_buttons" />

    <TextView
      android:id = "@+id/tvNo"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_alignBottom = "@+id/tvClose"
      android:layout_marginRight = "30dp"
      android:layout_toLeftOf = "@+id/tvClose"
      android:paddingBottom = "12dp"
      android:paddingLeft = "9dp"
      android:paddingRight = "9dp"
      android:paddingTop = "12dp"
      android:text = "@string/s_no"
      android:textAppearance = "?android:attr/textAppearanceMedium"
      android:textColor = "@color/text_dialog_button_negative"
      android:textSize = "@dimen/text_dialog_buttons" />

  </RelativeLayout>

</LinearLayout>
