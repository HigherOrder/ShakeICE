<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android = "http://schemas.android.com/apk/res/android"
  android:layout_width = "match_parent"
  android:layout_height = "wrap_content"
  android:background = "@android:color/white"
  android:orientation = "horizontal">
  <RelativeLayout
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginBottom = "18dp"
    android:layout_marginLeft = "18dp"
    android:layout_marginRight = "18dp"
    android:layout_marginTop = "18dp">
    <TextView
      android:id = "@+id/tvBody"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_alignParentTop = "true"
      android:layout_centerHorizontal = "true"
      android:text = "@string/s_menu_sensitivity"
      android:textColor = "@color/text_dialog_primary"
      android:textSize = "@dimen/text_dialog_primary" />
    <TextView
      android:id = "@+id/tvExplanation"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_below = "@+id/tvBody"
      android:layout_marginTop = "12dp"
      android:text = "@string/sensitivity_explanation"
      android:textAppearance = "?android:attr/textAppearanceSmall"
      android:textColor = "@color/text_dialog_tertiary"
      android:textSize = "@dimen/text_dialog_tertiary" />
    <RadioGroup
      android:id = "@+id/rgSensitivity"
      android:layout_width = "fill_parent"
      android:layout_height = "wrap_content"
      android:layout_below = "@+id/tvExplanation"
      android:layout_marginTop = "24dp"
      android:orientation = "vertical">
      <RelativeLayout
        android:id = "@+id/rlLowVery"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginBottom = "9dp" >
        <RadioButton
          android:id = "@+id/rbLowVery"
          android:layout_width = "match_parent"
          android:layout_height = "wrap_content"
          android:text = "@string/sensitivity_low_very"
          android:textColor = "@android:color/black"
          android:textSize = "@dimen/text_dialog_secondary" />
        <TextView
          android:id = "@+id/tvLowVery"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_marginLeft = "36dp"
          android:text = "@string/sensitivity_high_explanation"
          android:textAppearance = "?android:attr/textAppearanceSmall"
          android:textColor = "@color/text_dialog_tertiary"
          android:textSize = "@dimen/text_dialog_tertiary"
          android:visibility = "gone" />
      </RelativeLayout>
      <RelativeLayout
        android:id = "@+id/rlLow"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginBottom = "9dp">
        <RadioButton
          android:id = "@+id/rbLow"
          android:layout_width = "match_parent"
          android:layout_height = "wrap_content"
          android:text = "@string/sensitivity_low"
          android:textColor = "@android:color/black"
          android:textSize = "@dimen/text_dialog_secondary" />
        <TextView
          android:id = "@+id/tvLow"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignLeft = "@+id/rbLow"
          android:layout_below = "@+id/rbLow"
          android:layout_marginLeft = "36dp"
          android:text = "@string/sensitivity_high_explanation"
          android:textAppearance = "?android:attr/textAppearanceSmall"
          android:textColor = "@color/text_dialog_tertiary"
          android:textSize = "@dimen/text_dialog_tertiary"
          android:visibility = "gone" />
      </RelativeLayout>
      <RelativeLayout
        android:id = "@+id/rlMedium"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginBottom = "9dp">
        <RadioButton
          android:id = "@+id/rbMedium"
          android:layout_width = "match_parent"
          android:layout_height = "wrap_content"
          android:checked = "true"
          android:text = "@string/sensitivity_medium"
          android:textColor = "@android:color/black"
          android:textSize = "@dimen/text_dialog_secondary" />
        <TextView
          android:id = "@+id/tvMedium"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignLeft = "@+id/rbMedium"
          android:layout_below = "@+id/rbMedium"
          android:layout_marginLeft = "36dp"
          android:text = "@string/sensitivity_medium_explanation"
          android:textAppearance = "?android:attr/textAppearanceSmall"
          android:textColor = "@color/text_dialog_tertiary"
          android:textSize = "@dimen/text_dialog_tertiary"
          android:visibility = "gone" />
      </RelativeLayout>
      <RelativeLayout
        android:id = "@+id/rlHigh"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginBottom = "9dp">
        <RadioButton
          android:id = "@+id/rbHigh"
          android:layout_width = "match_parent"
          android:layout_height = "wrap_content"
          android:layout_alignParentLeft = "true"
          android:layout_alignParentTop = "true"
          android:text = "@string/sensitivity_high"
          android:textColor = "@android:color/black"
          android:textSize = "@dimen/text_dialog_secondary" />
        <TextView
          android:id = "@+id/tvHigh"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_above = "@+id/rbHigh"
          android:layout_alignParentLeft = "true"
          android:text = "@string/sensitivity_low_explanation"
          android:textColor = "@color/text_dialog_tertiary"
          android:textSize = "@dimen/text_dialog_tertiary"
          android:visibility = "gone" />
      </RelativeLayout>
      <RelativeLayout
        android:id = "@+id/rlHighVery"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginBottom = "9dp" >
        <RadioButton
          android:id = "@+id/rbHighVery"
          android:layout_width = "match_parent"
          android:layout_height = "wrap_content"
          android:layout_alignParentLeft = "true"
          android:layout_alignParentTop = "true"
          android:text = "@string/sensitivity_high_very"
          android:textColor = "@android:color/black"
          android:textSize = "@dimen/text_dialog_secondary" />
        <TextView
          android:id = "@+id/tvHighVery"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignParentLeft = "true"
          android:text = "@string/sensitivity_low_explanation"
          android:textColor = "@color/text_dialog_tertiary"
          android:textSize = "@dimen/text_dialog_tertiary"
          android:visibility = "gone" />
      </RelativeLayout>
    </RadioGroup>
    <TextView
      android:id = "@+id/tvClose"
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:layout_below = "@+id/rgSensitivity"
      android:layout_centerHorizontal = "true"
      android:layout_marginBottom = "12dp"
      android:layout_marginTop = "12dp"
      android:gravity = "center"
      android:paddingBottom = "12dp"
      android:paddingLeft = "6dp"
      android:paddingRight = "6dp"
      android:paddingTop = "12dp"
      android:text = "@string/s_close"
      android:textColor = "@color/secondary"
      android:textSize = "@dimen/text_dialog_buttons" />
  </RelativeLayout>
</LinearLayout>
